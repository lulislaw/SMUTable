<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SMUTable" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/softblue</item>
        <item name="colorPrimaryVariant">@color/softblue</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/alphablack</item>
        <item name="colorSecondaryVariant">@color/alpha25black</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/background</item>
        <!-- Customize your theme here. -->
        <!-- ?attr/colorPrimaryVariant -->

        <item name="popupMenuBackground">@drawable/menu_background</item>
        
        <item name="android:popupMenuStyle">@style/popupBGStyle</item>
    </style>
    
    <style name="popupBGStyle" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_background</item>
    </style>
    
</resources>