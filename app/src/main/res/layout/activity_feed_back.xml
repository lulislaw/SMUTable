<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feedback.FeedBackActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/back_from_feedback"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="@+id/textViewFeedBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewFeedBack"
        android:layout_marginStart="@dimen/_7sdp"
        app:tint="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/textViewFeedBack"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/back_from_feedback"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Фидбек"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/_20sdp"
        android:fontFamily="@font/ubuntu_bold"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_15sdp" />

    <EditText
        android:id="@+id/editContact"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewFeedBack"
        android:hint="Ваш Telegram | Vk | Email"
        android:textColorHint="@color/colorTextHint"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="@font/inter"
        android:background="@null"
        android:importantForAutofill="no"
        android:includeFontPadding="false"
        android:cursorVisible="true"
        android:textSize="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_50sdp"
        android:padding="@dimen/_5sdp"
        android:textCursorDrawable="@null"
        android:imeOptions="actionDone" />

    <View
        android:id="@+id/view"
        android:background="@drawable/block_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        app:layout_constraintTop_toBottomOf="@+id/editContact"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_7sdp"/>


    <EditText
        android:id="@+id/editMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:background="@null"
        android:cursorVisible="true"
        android:fontFamily="@font/inter"
        android:gravity="top"
        android:hint="Ваше сообщение"
        android:importantForAutofill="no"
        android:includeFontPadding="false"
        android:minHeight="@dimen/_275sdp"
        android:padding="@dimen/_5sdp"
        android:paddingTop="@dimen/_5sdp"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorTextHint"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/_15sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editContact" />

    <TextView
        android:visibility="gone"
        android:id="@+id/dateTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DateTimeTextView"
        android:textSize="@dimen/_10ssp"
        android:fontFamily="@font/inter"
        app:layout_constraintEnd_toEndOf="@+id/editMessage"
        app:layout_constraintTop_toBottomOf="@+id/editMessage" />


    <Button
        android:id="@+id/buttonFeedBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/softblue"
        android:fontFamily="@font/inter"
        android:onClick="onButtonFeedBack"
        android:text="Отправить"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/_40sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>