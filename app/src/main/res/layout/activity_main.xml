<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="50dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="120dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/LINEARLAYOUT_ALL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TEXTVIEW_MONDAY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TEXTVIEW_MONDAY" />

            <Button
                android:id="@+id/BUTTON_SUBJECT_INFO1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Button"
                android:textSize="10sp" />

            <Button
                android:id="@+id/BUTTON_SUBJECT_INFO2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Button"
                android:textSize="10sp" />

            <Button
                android:id="@+id/BUTTON_SUBJECT_INFO3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Button"
                android:textSize="10sp" />

            <Button
                android:id="@+id/BUTTON_SUBJECT_INFO4"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Button"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/TEXTVIEW_TUESDAY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="TEXTVIEW_TUESDAY" />

            <Button
                android:id="@+id/BUTTON_SUBJECT_INFO5"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Button"
                android:textSize="10sp" />

            <Button
                android:id="@+id/BUTTON_SUBJECT_INFO6"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Button"
                android:textSize="10sp" />

            <Button
                android:id="@+id/BUTTON_SUBJECT_INFO7"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Button"
                android:textSize="10sp" />

            <Button
                android:id="@+id/BUTTON_SUBJECT_INFO8"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Button"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/TEXTVIEW_WEDNESDAY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="TEXTVIEW" />

            <Button
                android:id="@+id/BUTTON_SUBJECT_INFO9"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Button"
                android:textSize="10sp" />

            <Button
                android:id="@+id/BUTTON_SUBJECT_INFO10"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Button"
                android:textSize="10sp" />

            <Button
                android:id="@+id/BUTTON_SUBJECT_INFO11"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Button"
                android:textSize="10sp" />

            <Button
                android:id="@+id/BUTTON_SUBJECT_INFO12"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Button"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/TEXTVIEW_THURSDAY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="TEXTVIEW" />

            <Button
                android:id="@+id/BUTTON_SUBJECT_INFO13"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Button"
                android:textSize="10sp" />

            <Button
                android:id="@+id/BUTTON_SUBJECT_INFO14"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Button"
                android:textSize="10sp" />

            <Button
                android:id="@+id/BUTTON_SUBJECT_INFO15"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Button"
                android:textSize="10sp" />

            <Button
                android:id="@+id/BUTTON_SUBJECT_INFO16"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Button"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/TEXTVIEW_FRIDAY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="TEXTVIEW" />

            <Button
                android:id="@+id/BUTTON_SUBJECT_INFO17"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Button"
                android:textSize="10sp" />

            <Button
                android:id="@+id/BUTTON_SUBJECT_INFO18"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Button"
                android:textSize="10sp" />

            <Button
                android:id="@+id/BUTTON_SUBJECT_INFO19"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Button"
                android:textSize="10sp" />

            <Button
                android:id="@+id/BUTTON_SUBJECT_INFO20"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Button"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/TEXTVIEW_SATURDAY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="TEXTVIEW" />

            <Button
                android:id="@+id/BUTTON_SUBJECT_INFO21"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Button"
                android:textSize="10sp" />

            <Button
                android:id="@+id/BUTTON_SUBJECT_INFO22"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Button"
                android:textSize="10sp" />

            <Button
                android:id="@+id/BUTTON_SUBJECT_INFO23"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Button"
                android:textSize="10sp" />

            <Button
                android:id="@+id/BUTTON_SUBJECT_INFO24"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Button"
                android:textSize="10sp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <ImageButton
        android:id="@+id/BUTTON_TO_SELECTION"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/btn_dialog" />

    <ImageButton
        android:id="@+id/BUTTON_REFRESH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_popup_sync" />

    <ImageButton
        android:id="@+id/BUTTON_SET_WEEK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_week" />

    <TextView
        android:id="@+id/TEXTVIEW_GROUP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="0 - группа"
        app:layout_constraintBottom_toTopOf="@+id/nestedScrollView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/CLOSE_INFO_BLOCK"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:background="#00FFFFFF"

        android:clickable="false"
        android:gravity="center"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/INFO_BLOCK"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="225dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="225dp"
        android:background="#0040FF"
        android:clickable="false"
        android:gravity="center"
        android:text="TextView"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#D3D3D3"
        android:clickable="false"
        android:maxDate="12/31/2100"
        android:minDate="01/01/2022"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/TEXTVIEW_WEEK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@id/BUTTON_SET_WEEK"
        app:layout_constraintTop_toTopOf="@id/BUTTON_SET_WEEK" />


</androidx.constraintlayout.widget.ConstraintLayout>