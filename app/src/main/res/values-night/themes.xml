<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SMUTable" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorPrimary">@color/darkblue</item>
        <item name="colorPrimaryVariant">@color/darkblue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/alphawhite</item>
        <item name="colorSecondaryVariant">@color/alpha25white</item>
        <item name="colorOnSecondary">@color/backgrounddark</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/background</item>
        <!-- Customize your theme here. -->

        <item name="popupMenuBackground">@drawable/menu_background_dark</item>

        <item name="android:popupMenuStyle">@style/popupBGStyleDark</item>
    </style>

    <style name="popupBGStyleDark" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_background_dark</item>
    </style>

</resources>